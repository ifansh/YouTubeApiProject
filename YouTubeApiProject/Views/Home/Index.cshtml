@model List<YouTubeApiProject.Models.YouTubeVideoModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to YouTube</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: white;
            color: white;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 40px;
            text-align: center;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 20px;
            color: red;
        }

        .video-card {
            background-color: #444;
            border-radius: 8px;
            padding: 20px;
            margin: 20px;
            transition: transform 0.3s;
        }

            .video-card:hover {
                transform: scale(1.05);
            }

            .video-card img {
                width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .watch-button {
            background-color: #d9534f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .watch-button:hover {
                background-color: #c9302c;
            }

        footer {
            background-color: #f1f1f1;
            padding: 1px; /* Reduced padding */
            text-align: center;
            width: 100%;
            position: relative;
            bottom: 0;
        }

        h2 {
            color: dimgray;
        }

    </style>
</head>
<body>

    <div class="container">
        <h1>Welcome to YouTube!</h1>
        <h2>Discover amazing videos and connect with creators from around the world.</h2>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var video in Model)
                {
                    <div class="col-md-4">
                        <div class="video-card">
                            <h3>@video.Title</h3>
                            <p>@video.Description</p>
                            <img src="@video.ThumbnailUrl" alt="@video.Title" />
                            <br />
                            <a href="@video.VideoUrl" target="_blank">
                                <button type="button" class="watch-button">Watch</button>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>



</body>
</html>
